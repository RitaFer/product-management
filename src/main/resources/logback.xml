<configuration>
    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>
    <root level="warn">
        <appender-ref ref="CONSOLE" />
    </root>
    <root level="debug">
        <appender-ref ref="CONSOLE" />
    </root>
    <root level="error">
        <appender-ref ref="CONSOLE" />
    </root>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
</configuration>
